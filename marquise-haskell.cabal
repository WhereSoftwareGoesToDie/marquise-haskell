category:            System
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     System.Marquise
  other-modules:       System.Marquise.FFI
                       System.Marquise.Error
  other-extensions:    ForeignFunctionInterface
  build-depends:       base >=4.6 && <4.7,
                       bytestring,
                       mtl,
                       vector,
                       clock
  hs-source-dirs:      src
  default-language:    Haskell2010
  extra-libraries:     marquise


test-suite             check
  type:                exitcode-stdio-1.0
  other-extensions:    ForeignFunctionInterface
  build-depends:       base >=4.6 && <4.7,
                       bytestring,
                       hspec,
                       HUnit,
                       mtl,
                       marquise-haskell
  hs-source-dirs:      tests
  main-is:             check.hs
  default-language:    Haskell2010
  extra-libraries:     marquise

